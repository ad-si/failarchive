extends ./layout

block content
	nav
		form
			select(
				name='categories'
				class='categories'
				data-placeholder='Choose categories'
				onchange='this.form.submit()'
			)
				option(value='drunk', selected= categories=='drunk') Drunk
				option(value='woman', selected= categories=='woman') Woman
				option(value='dating', selected= categories=='dating') Dating
				option(value='tinder', selected= categories=='tinder') Tinder
				option(value='compilation', selected= categories=='compilation') Compilation
				option(value='celeb', selected= categories=='celeb') Celeb
				option(value='sport', selected= categories=='sport') Sport
				option(value='people', selected= categories=='people') People
				option(value='gaming', selected= categories=='gaming') Gaming
	main
		for fail, index in fails
			section.fail
				h2: a(href='/fail/' + fail.id)= fail.title || ''

				.video(
					id='video-' + fail.id
					data-id=fail.id
				)
					div
						if index < 3
							iframe(
								id='iframe-' + fail.id
								data-id=fail.id
								src='https://www.youtube.com/embed/' + fail.id + '?enablejsapi=1'
								frameborder="0"
								allowfullscreen
							)

						img(
							id='image-' + fail.id
							data-id=fail.id
							class='thumbnail'
							src='https://i.ytimg.com/vi/#{fail.id}/hqdefault.jpg'
							alt=fail.title
						)

				p= fail.description || ''

				| Upvotes: #{fail.upvotes || 0}
				| Downvotes: #{fail.downvotes || 0}

block scripts
	script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js')
	script(src='//cdnjs.cloudflare.com/ajax/libs/chosen/1.4.2/chosen.jquery.min.js')
	script(src='//www.youtube.com/iframe_api')
	script(src='/scripts/main.js')
