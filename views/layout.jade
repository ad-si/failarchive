doctype html
html
	head
		meta(charset='utf-8')
		title FailArchive
		meta(name='viewport' content='width=device-width, initial-scale=1')
		link(
			rel='stylesheet'
			href='//fonts.googleapis.com/css?family=Kreon:400,700'
		)
		link(
			rel='stylesheet'
			href='https://cdnjs.cloudflare.com/ajax/libs/chosen/1.4.2/chosen.min.css'
		)
		link(rel='stylesheet' href='/styles/screen.css')
		script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js')
		script(
			src='//cdnjs.cloudflare.com/ajax/libs/chosen/1.4.2/chosen.jquery.min.js')

	body
		#wrapper
			header
				h1: a(href='/') Fail
					span Archive

				form(action='/')
					select(
						name='tag'
						class='tag'
						data-placeholder='Choose tags'
						multiple=true
					)
						for tag in availableTags
							option(
								value = tag
								selected = (currentTags.indexOf(tag) !== -1)
							)= tag
					input(type='submit')

			block content

			footer
				p= 'For feedback contact us at '
					a(href='mailto:info@failarchive.com') info@failarchive.com

		script.
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

			ga('create', 'UA-75537506-1', 'auto');
			ga('send', 'pageview');

		block scripts
