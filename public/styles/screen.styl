*
	margin 0
	padding 0
	border 0
	box-sizing border-box

body
	width 100%
	font-family Helvetica, sans-serif

button
	color rgb(50,50,50)
	font-weight 900
	padding 0.5em 1em
	border-radius 0.2em

#wrapper
	padding 0 1em 2em 1em
	width 100%

header
	position relative
	background-color red
	padding 1em
	h1
		display inline-block
	button
		position absolute
		right 1em

iframe
	width 100%
	min-height 20em


@media screen and (min-width 600px)
	iframe
		width 560px


@media screen and (min-width 960px)
	#wrapper
		width 960px
		margin 0 auto
