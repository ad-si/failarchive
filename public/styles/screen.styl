*
	margin 0
	padding 0
	border 0
	box-sizing border-box

body
	width 100%
	font-family Helvetica, sans-serif
	background-color rgb(230,230,230)

h1
	color black
	font-family Kreon, sans-serif
	font-weight 700
	span
		color rgb(80,40,0)

button
	color rgb(50,50,50)
	font-weight 900
	padding 0.5em 1em
	border-radius 0.2em

#wrapper
	background-color white
	padding 0 0em 2em 0em
	width 100%

main
	padding 0 1em

header
	position relative
	background-color rgb(190,150,100)
	padding 1em  2em
	h1
		display inline-block
	button
		position absolute
		right 1em

iframe
	min-width 16em
	min-height 12em

.fail
	padding 2em 1em 1em 1em
	border-bottom 1px solid rgb(230,230,230)
	h2
		margin-bottom 0.5em


//@media screen and (min-width 600px)


@media screen and (min-width 960px)
	#wrapper
		width 960px
		margin 0 auto
