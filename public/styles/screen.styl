fontColor = rgb(50, 50, 50)

*
	margin 0
	padding 0
	border 0
	box-sizing border-box

body
	width 100%
	font-size 16px
	font-family Helvetica, sans-serif
	background-color rgb(230,230,230)

a
	cursor pointer

h1
	font-family Kreon, sans-serif
	font-weight 700
	a
		text-decoration none
		color fontColor
	span
		color rgb(80,40,0)

button
	font-weight 900
	padding 0.5em 1em
	border-radius 0.2em

#wrapper
	background-color white
	padding 0 0em 2em 0em
	width 100%

main
	padding 0 1em

header
	position relative
	background-color rgb(190,150,100)
	padding 1em  2em
	h1
		display inline-block
	button
		position absolute
		right 1em

.video
	max-width: 80vw

.video > div
	position: relative
	padding-bottom: 75%
	height: 0px

.video iframe
	position: absolute
	top: 0px
	left: 0px
	width 100%
	height 100%
  
.fail
	padding 2em 1em 1em 1em
	border-bottom 1px solid rgb(230,230,230)
	h2
		margin-bottom 0.5em


